<!DOCTYPE html>
<html>

<head>
  <title>
    DAB User Details
  </title>
  <link rel="stylesheet" href="/stylesheets/base.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

  <%-include('./partials/navbar.ejs')%>
    <div class="container">
      <h2 class="text-center text-primary"><i>
          <%=user.FirstName%>
            <%=user.LastName%>
        </i></h2>
      <h3>My reservations:</h2>
        <table class="table table-bordered table-striped table-hover">
          <thead class="table-success">
            <tr>
              <th scope="col">Hotel name</th>
              <th scope="col">Hotel location</th>
              <th scope="col">Room capacity</th>
              <th scope="col">Price per day</th>
              <th scope="col">Rent from:</th>
              <th scope="col">Rent to:</th>
            </tr>
          </thead>
          <tbody>
            <% user.Rooms.forEach(function(room){ %>
              <tr>
                <td>
                  <%=room.Hotel.Name%>
                </td>
                <td>
                  <%=room.Hotel.Location%>
                </td>
                <td>
                  <%=room.Capacity%>
                </td>
                <td>
                  <%=room.PricePerDay%>
                </td>
                <td>
                  <%=new Date(room.Reservation.StartDate).toLocaleDateString()%>
                </td>
                <td>
                  <%=new Date(room.Reservation.EndDate).toLocaleDateString()%>
                </td>
              </tr>
              <% });%>
          </tbody>
        </table>
    </div>
    <%-include('./partials/footer.ejs')%>

</body>

</html>