<!DOCTYPE html>
<html>
  <head>
    <title>
      DAB Hotel Details
    </title>
    <link rel="stylesheet" href="/stylesheets/base.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>

	<%-include('./partials/navbar.ejs')%>
    <h2 class="text-center text-primary"><i><%=hotel.Name%></i></h2>
    <h3 class="text-center">Location:</h3>
    <h4 class="text-center text-primary"><i><%=hotel.Location%></i></h4>
    <h3 class="text-center">Rate:</h3>
    <% if(hotel.Rated) { %>
      <h4 class="text-center text-primary"><i><%=hotel.AvgRate%></i></h4>
    <% } else {%>
      <div class="text-center">
        <button onclick="makeRate(1,'http\:\/\/localhost:3000\/hotels\/<%=hotel.id%>\/rate' )"  class="btn btn-success"> Rate a hotel</button>
      </div>
    <% }; %>
    <script src="../javascripts/makeRate.js"></script>
<%-include('./partials/footer.ejs')%>

  </body>
</html>
